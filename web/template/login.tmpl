 {{template "login.tmpl".}}

 {{define "content"}}
 <main>
     <h1>Login</h1>

            <form action="/login" method ="POST">
                <div>
                    <label for="email"> Email </label>
                    <input type ="email" name="email" id ="email" placeholder="example@sjec.ac.in" required>
                </div>
                <div>
                    <label for="username"> Username </label>
                    <input type ="text" name="username" id ="username" placeholder ="yourname" required>
                </div>

                <button>Login</button>
            </form>
</main>

{{end}}